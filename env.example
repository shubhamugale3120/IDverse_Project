# IDVerse Project Environment Configuration
# Copy this file to .env and update the values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/idverse_db
# Alternative for SQLite: DATABASE_URL=sqlite:///instance/idverse.db

# Service Mode Configuration
# Set to 'mock' for development, 'real' for production

# IPFS Service Configuration
IPFS_MODE=mock
# For real IPFS:
# IPFS_MODE=real
# IPFS_HOST=127.0.0.1
# IPFS_PORT=5001

# Signing Service Configuration
SIGN_MODE=mock
# For real Ed25519 signing:
# SIGN_MODE=ed25519
# ISSUER_DID=did:example:issuer

# Blockchain Registry Configuration
CHAIN_MODE=mock
# For real blockchain:
# CHAIN_MODE=real
# BLOCKCHAIN_RPC_URL=http://localhost:8545
# REGISTRY_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
# BLOCKCHAIN_PRIVATE_KEY=your-private-key-here

# OTP Service Configuration (for future implementation)
OTP_MODE=mock
# For real OTP:
# OTP_MODE=real
# SMS_API_KEY=your-sms-api-key
# EMAIL_API_KEY=your-email-api-key

# Security Configuration
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days in seconds

# Rate Limiting (for future implementation)
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per hour

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/idverse.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# Cache Configuration (for future implementation)
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
